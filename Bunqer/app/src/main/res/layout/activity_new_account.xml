<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sander.bunqer.NewAccountActivity">

    <EditText
        android:id="@+id/accountname"
        android:hint="Account name (e.g. household)"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="120dp"/>

    <EditText
        android:id="@+id/accountnumber"
        android:hint="Account number"
        android:maxLines="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/accountname"
        app:layout_constraintStart_toStartOf="@id/accountname"
        app:layout_constraintEnd_toEndOf="@id/accountname"
        />

    <EditText
        android:id="@+id/pathtocsv"
        android:maxLines="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Path/to/bankstatement.csv"
        app:layout_constraintTop_toBottomOf="@id/accountnumber"
        app:layout_constraintStart_toStartOf="@id/accountname"
        app:layout_constraintEnd_toEndOf="@id/accountname"
        />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/createAccountButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Create new account"
        app:layout_constraintTop_toBottomOf="@id/pathtocsv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="sendToMonth"/>

    <TextView
        android:id="@+id/tvTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>
