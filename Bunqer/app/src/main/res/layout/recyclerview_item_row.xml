<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_editor_absoluteY="300dp"
    tools:layout_editor_absoluteX="50dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/transaction_recycler_tv_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Material"
            android:textSize="16sp"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Description"
            app:layout_constraintEnd_toStartOf="@+id/transaction_recycler_tv_amount"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/transaction_recycler_tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Date"
            app:layout_constraintStart_toStartOf="@id/transaction_recycler_tv_description"
            app:layout_constraintTop_toBottomOf="@+id/transaction_recycler_tv_description"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/transaction_recycler_tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            tools:text="Amount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="319dp" />

        <TextView
            android:id="@+id/transaction_recycler_tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="@id/transaction_recycler_tv_description"
            app:layout_constraintTop_toBottomOf="@+id/transaction_recycler_tv_date"
            tools:text="Category"
            tools:layout_editor_absoluteX="0dp" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>